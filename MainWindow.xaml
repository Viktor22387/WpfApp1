<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mouse Event Handler Example" Height="300" Width="400">
    <Grid>
        <Rectangle x:Name="Rectangle" Fill="LightBlue" Stroke="Black" StrokeThickness="2"
                   Margin="10" MouseLeftButtonDown="Rectangle_MouseLeftButtonDown"
                   MouseRightButtonDown="Rectangle_MouseRightButtonDown" MouseMove="Rectangle_MouseMove"/>
    </Grid>
</Window>