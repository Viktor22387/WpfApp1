<Window x:Class="NumberGuessingGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Number Guessing Game" Height="350" Width="525">
    <Grid>
        <!-- Customize the layout as needed -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Welcome to the Number Guessing Game!" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" />
            <Button x:Name="GuessButton" Content="Make a Guess" Click="GuessButton_Click" />
        </StackPanel>
    </Grid>
</Window>
