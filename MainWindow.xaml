<Window x:Class="TextReaderApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Text Reader App" Height="300" Width="400">
    <Grid>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="20" Margin="50,50,0,0"/>
        <Button Content="Read Text" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="50,100,0,0" Click="ReadTextButton_Click"/>
    </Grid>
</Window>
