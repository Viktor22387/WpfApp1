<Window x:Class="SimpleWpfResume.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple WPF Resume" Height="350" Width="525">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Welcome to My Resume App!" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" />
            <Button x:Name="ShowResumeButton" Content="Show Resume" Click="ShowResumeButton_Click" />
        </StackPanel>
    </Grid>
</Window>
