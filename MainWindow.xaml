<Window x:Class="BirthdayCalendarApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Birthday Calendar App" Height="400" Width="600">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Введите дату своего рождения (дд.мм.гггг):" FontSize="16"/>
            <TextBox x:Name="BirthdayTextBox" Margin="0,10,0,10" Width="200"/>
            <Button Content="Показать календарь" Width="150" Click="ShowCalendarButton_Click" />
            <Calendar x:Name="BirthdayCalendar" Margin="0,20,0,0" />
        </StackPanel>
    </Grid>
</Window>
