<Window x:Class="DateDifferenceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Date Difference App" Height="300" Width="300">
    <Border Background="LightGray" CornerRadius="150">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Выберите две даты:" FontSize="16" Margin="0,0,0,20"/>
            <DatePicker x:Name="StartDatePicker" Margin="0,0,0,10"/>
            <DatePicker x:Name="EndDatePicker" Margin="0,0,0,20"/>
            <Button Content="Подсчитать" Width="100" Click="CalculateButton_Click"/>
            <Label x:Name="ResultLabel" Content="" FontSize="16" Margin="0,20,0,0"/>
        </StackPanel>
    </Border>
</Window>
